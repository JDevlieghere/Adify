        <!-- Map Canvas -->
        <div id="map-canvas"></div>

        <div id="view"></div>

        <div id="search"></div>
        <div id="add_cla-button" class="hidden-xs">
            <a href="/create" class="btn btn-success input-lg" style="line-height:32px">
